<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/live_item_img"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:src="@mipmap/ic_launcher1" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/live_item_headImg1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/live_item_headImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_launcher1" />
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/live_item_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/live_item_headImg1"
        android:singleLine="true"
        android:text="name"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/live_item_nickName"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/live_item_headImg1"
        android:text="nickName"
        android:textColor="#848383"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/live_item_number"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:text="55555"
        android:textColor="#848383"
        android:textSize="7sp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/live_item_number"
        android:src="@mipmap/icon_def_count" />


</RelativeLayout>