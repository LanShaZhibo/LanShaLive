<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lansha.lanshalive.GameSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_controller_height"
        android:background="#3BA2EF"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="35dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/game_second_tablayout"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                app:tabBackground="@drawable/game_second_tab_selector"
                app:tabIndicatorHeight="0dp"
                app:tabMinWidth="80dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#3BA2EF"
                app:tabTextColor="#ffffff"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/game_second_header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher" />

    <android.support.v4.view.ViewPager
        android:id="@+id/game_second_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
