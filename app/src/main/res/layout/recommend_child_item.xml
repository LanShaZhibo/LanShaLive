<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_width="175dp"
    android:layout_height="120dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp">
    <ImageView
        android:id="@+id/live_item_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/live_item_headImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/live_item_name"
        android:text="name"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_toRightOf="@id/live_item_headImg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/live_item_nickName"
        android:text="nickName"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/live_item_headImg"/>


    <TextView
        android:id="@+id/live_item_number"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:text="55555"
        android:textSize="8sp" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/live_item_number"
        android:src="@mipmap/icon_def_count" />

</RelativeLayout>
